<UserControl x:Class="CsharpBeadando1.UserWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CsharpBeadando1"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
<StackPanel>
            <DockPanel HorizontalAlignment="Stretch">
                <StackPanel Margin="20">
                    <Label Content="Data" />
                    <ListBox Width="300" MinHeight="300" MaxHeight="300" />
                </StackPanel>
                <StackPanel Margin="20">
                    <Label Content="Tools"></Label>
                    <Button Content="Select Patient" Width="90" Margin="10"></Button>
                    <Button Content="Add data" Width="90" Margin="10"></Button>
                </StackPanel>
                <Button Click="OnLoginButtonClick" HorizontalAlignment="Right" Margin="20"
                        Content="Log in as admin" Height="30" VerticalAlignment="Top" />
            </DockPanel>
            <Label x:Name="LabelUserState" Margin="20 00 0 0" Content="Logged in as Guest" />
        </StackPanel>    </Grid>
</UserControl>
